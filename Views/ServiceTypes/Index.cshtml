@model IEnumerable<SammysAuto.Models.ServiceType>
@{
    ViewData["Title"] = "Service Types";
}

<br/>
<h2>List of Services</h2>
<br>
<hr/>

<div class="form-border">
    <p>
        <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>
    </p>
    <br/>
    <table class="table table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Name)
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial{ ServiceId = item.Id })
                </td>
            </tr>
        }
    </table>
</div>